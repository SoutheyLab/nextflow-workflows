process {
    executor = 'slurm'
    stageInMode = 'symlink'
    clusterOptions = '--account=vh83 --qos=normal'
    errorStrategy = 'retry'
    maxRetries = 5
    memory = { (task.attempt == 1) ? task.memory : (task.memory + (task.attempt * (task.memory / 2))) }
    time = { (task.attempt == 1) ? task.time : (task.time + (task.attempt * (task.time / 2))) }
    cache = 'lenient'
    queue = 'comp'
}

executor {
    name = 'slurm'
    queueSize = 200
    pollInterval = '30 sec'
}
