process {
    clusterOptions = '--account=vh83'
    errorStrategy { sleep(Math.pow(2, task.attempt) * 200); return 'retry' }
    maxRetries 5
    memory { task.memory * (0.5 * task.attempt) }
    time = { task.time * (0.5 * task.attempt) }
}

executor {
    name = 'slurm'
    queueSize = 200
    pollInterval = '30 sec'
}
